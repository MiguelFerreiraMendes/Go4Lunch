<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantDetailsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:background="@color/colorAccent"
        android:text="Name"
        android:paddingStart="20dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adress"
        android:background="@color/colorAccent"
        android:paddingStart="20dip"
        android:layout_marginTop="40dp"
        android:textSize="15sp"
        android:text="Restaurant type + adress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

    </TextView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="16dp"
        android:tint="@color/colorAccent"
        android:backgroundTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewName">


        <Button
            android:textColor="@android:color/background_dark"
            android:id="@+id/buttonCall"
            android:paddingTop="20dip"
            android:layout_weight="1"
            android:layout_width="140dip"
            android:layout_height="100dip"
            android:backgroundTint="@android:color/white"
            android:text="CALL"
            android:drawableTop="@drawable/ic_call_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewName" />

        <Button
            android:textColor="@android:color/background_dark"
            android:drawableTop="@drawable/ic_star_black_24dp"
            android:backgroundTint="@android:color/white"
            android:paddingTop="20dip"
            android:layout_weight="1"
            android:id="@+id/buttonLike"
            android:text="LIKE"
            android:layout_width="144dip"
            android:layout_height="100dip"
            app:layout_constraintEnd_toStartOf="@+id/buttonwebsite"
            app:layout_constraintStart_toEndOf="@+id/buttonCall"
            app:layout_constraintTop_toBottomOf="@+id/textViewName" />

        <Button
            android:textColor="@android:color/background_dark"
            android:layout_weight="1"
            android:paddingTop="20dip"
            android:backgroundTint="@android:color/white"
            android:text="WEBSITE"
            android:id="@+id/buttonwebsite"
            android:layout_width="140dip"
            android:layout_height="100dip"
            android:drawableTop="@drawable/ic_website_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewName" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="225dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>