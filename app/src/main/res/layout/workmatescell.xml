<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:background="@android:color/white"
    android:clickable="true"
    android:id="@+id/backgroundworkmatecell">

    <ImageView
        android:id="@+id/imageViewworkmate"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginStart="10dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textviewworkmate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jean Didier is eating french (Le Zinc)"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginStart="15dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewworkmate"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>